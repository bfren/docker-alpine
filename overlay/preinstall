#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install nushell.
#======================================================================================================================

apk add --no-cache \
    busybox-binsh@edgemain \
    libcrypto3@edgemain \
    libssl3@edgemain \
    nushell@edgetest


#======================================================================================================================
# Make bf-install executable.
#======================================================================================================================

chmod +x /usr/bin/bf/bf-install


#======================================================================================================================
# Delete self.
#======================================================================================================================

rm /preinstall
