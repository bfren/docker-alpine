#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install nushell and dependencies.
#======================================================================================================================

apk add --no-cache \
    busybox-binsh@edgemain \
    libcrypto3@edgemain \
    libssl3@edgemain \
    nushell@edgetest


#======================================================================================================================
# Set permissions.
#======================================================================================================================

chmod 0555 /usr/bin/bf/bf-install
chmod 0600 /root/.config/nushell/*


#======================================================================================================================
# Delete self.
#======================================================================================================================

rm /preinstall
