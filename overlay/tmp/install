#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Get esh version.
#======================================================================================================================

cd /tmp

ESH_VERSION=$(cat ESH_BUILD)
bf-debug "esh version ${ESH_VERSION}."


#======================================================================================================================
# Install esh template engine.
#======================================================================================================================

bf-echo "Installing esh v${ESH_VERSION}..."
apk add --no-cache esh=${ESH_VERSION} && bf-done \
    || bf-error "esh not installed."


#======================================================================================================================
# Set timezone.
#======================================================================================================================

bf-tz "Europe/London"


#======================================================================================================================
# Cleanup.
#======================================================================================================================

rm /bf/etc/init.d/.empty
rm /bf/etc/src/.empty
rm /bf/etc/templates/.empty
rm /usr/lib/bf/.empty
