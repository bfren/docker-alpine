#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Clear temporary directories and caches.
#======================================================================================================================

bf-debug "Clearing /tmp..." "bf-clear"
rm -rf /tmp/*

bf-debug "Clearing caches..." "bf-clear"
rm -rf /var/cache/apk/*
rm -rf /var/cache/misc/*

bf-echo "Removing .empty files..."
find / -type f -name ".empty" -delete

bf-debug "Done." "bf-clear"
