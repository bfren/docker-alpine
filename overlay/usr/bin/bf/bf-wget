#!/usr/bin/nu

use bf
bf env x_set

# Download a URL and either return or save contents
def main [
    url: string                 # URL to download
    --destination (-O): string  # Optional destination (including filename) - if not set the file will be saved to the current working directory
    --return (-r)               # If set, the contents will be returned instead of saved
]: nothing -> string {
    bf http download --return=($return) $url $destination
}
