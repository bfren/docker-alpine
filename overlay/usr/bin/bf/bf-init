#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Run container initialisation.
#======================================================================================================================

bf-debug "Executing container initialisation."

INIT=/etc/bf/init.d
for FILE in `ls ${INIT} | sort` ; do
    chmod +x ${INIT}/${FILE} && ${INIT}/${FILE}
done


#======================================================================================================================
# Execute.
#======================================================================================================================

exec "$@"
