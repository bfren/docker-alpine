#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Run container initialisation.
#======================================================================================================================

bf-debug "Initialising container."

INIT=/etc/bf/init.d
for FILE in `ls ${INIT} | sort` ; do
    bf-debug "${FILE} running."
    chmod +x ${INIT}/${FILE} && ${INIT}/${FILE}
    bf-debug "${FILE} done."
done

bf-debug "Done."


#======================================================================================================================
# Execute.
#======================================================================================================================

exec "$@"
