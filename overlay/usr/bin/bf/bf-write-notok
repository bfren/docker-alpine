#!/usr/bin/env nu

use bf
bf env load

# Write text in red with the current date / time
def main [
    text: string    # The text to write
    script?: string # The name of the calling script or executable
] {
    match $script {
        $s if $s != "" => (bf write notok $text $s),
        _ => (bf write notok $text)
    }
}
