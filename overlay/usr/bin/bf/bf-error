#!/usr/bin/env nu

use ../../lib/bf/

# Print error message in red with the current date / time and exits with code 1
def main [
    error: string   # The error message to print
    script?: string # The name of the calling script or executable
] {
    let $output = bf print notok $error $script
    print --no-newline --stderr $output
    exit 1
}
