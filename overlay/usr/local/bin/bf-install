#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Store image version.
#======================================================================================================================

bf-echo "${BF_IMAGE/docker-/} v${BF_VERSION}"
echo "${BF_VERSION}" >> /BF_VERSION


#======================================================================================================================
# Run install script in /tmp and then perform cleanup.
#======================================================================================================================

INSTALL=/tmp/install
[[ ! -f ${INSTALL} ]] && bf-error "${INSTALL} does not exist."

chmod +x ${INSTALL} && ${INSTALL}
bf-done

bf-clear
